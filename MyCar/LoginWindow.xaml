<Window x:Class="MyCar.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCar"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding ElementName=FrmMain, Path=Content.Title}" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="65" FontFamily="Times New Roman"></TextBlock>
        <Frame Grid.Row="1" x:Name="FrmMain" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
