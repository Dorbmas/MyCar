<Page x:Class="MyCar.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyCar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Name="LoginPage"
      Title="Вход">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите логин:" Margin="5" FontSize="20" FontFamily="Times New Roman"></TextBlock>
            <TextBox Margin="5" Width="300" x:Name="login" FontSize="20" FontFamily="Times New Roman"></TextBox>
            <TextBlock Text="Введите пароль:" Margin="5" FontSize="20" FontFamily="Times New Roman"></TextBlock>
            <PasswordBox Margin="5" Width="300" x:Name="password" FontSize="20" FontFamily="Times New Roman"></PasswordBox>
            <Button Content="Войти" FontFamily="Times New Roman" FontSize="20" Width="125" Margin="5" Background="LightGreen" BorderBrush="Green" Click="BtnLogin_Click"></Button>
            <Button Content="Регистрация" FontFamily="Times New Roman" FontSize="20" Width="125" Margin="5" Background="Yellow" BorderBrush="Orange" Click="BtnRegistration_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
